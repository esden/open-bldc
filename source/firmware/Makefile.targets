COMMON_OBJECTS = src/exceptions.o \
		 src/vector_table.o \
		 driver/led.o

OBJECTS = $(COMMON_OBJECTS)

DEFAULT_TARGET = mc

TARGETS = mc test_blink test_governor test_32bit_tim test_sys_tick

#CP_IDLE_STRATEGY ?=
#CP_ALIGNING_STRATEGY ?=
CP_SPINUP_STRATEGY ?= 2step
#CP_SPINNING_STRATEGY ?=
#CP_ERROR_STRATEGY ?=

mc.PARAMS = CP_SPINUP_STRATEGY

mc.OBJECTS = \
	src/mc_main.o \
	driver/usart.o \
	driver/adc.o \
	driver/sys_tick.o \
	src/pwm/pwm.o \
	src/pwm/pwm_scheme_6step_h_pwm_l_on.o \
	src/comm_tim.o \
	src/gprot.o \
	src/sensor_process.o \
	src/comm_process.o \
	src/cp_idle.o \
	src/cp_aligning.o \
	src/cp_spinup_$(CP_SPINUP_STRATEGY).o \
	src/cp_spinning.o \
	src/cp_error.o \
	src/control_process.o

OBJECTS += $(mc.OBJECTS)

test_blink.OBJECTS = \
	test/blink_main.o

OBJECTS += $(test_blink.OBJECTS)

test_governor.OBJECTS = \
	test/governor_main.o \
	driver/usart.o \
	test/gprot_test_governor.o

OBJECTS += $(test_governor.OBJECTS)

test_32bit_tim.OBJECTS = \
	test/32bit_tim_main.o \
	driver/32bit_tim.o \
	test/32bit_tim_ref_tim.o

OBJECTS += $(test_32bit_tim.OBJECTS)

test_sys_tick.OBJECTS = \
	test/sys_tick_main.o \
	driver/sys_tick.o

OBJECTS += $(test_sys_tick.OBJECTS)
